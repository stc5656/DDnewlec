<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	
	<!-- 각 이름들에 맞는 애들을 여기서 찾아서 조합한 다음 뿌림 -->
	<definition name="home.*"	template="/WEB-INF/views/inc/layout.jsp">
		<put-attribute name="title"	value="Tiles tutorial homepage" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="main"	value="/WEB-INF/views/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	</definition>	
	
	<definition name="teacher.*"	template="/WEB-INF/views/teacher/inc/layout.jsp">
		<put-attribute name="title"	value="Tiles tutorial homepage" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="main"	value="/WEB-INF/views/teacher/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	</definition>
	
	<definition name="teacher.*.*"	template="/WEB-INF/views/teacher/inc/layout.jsp">
		<put-attribute name="title"	value="Tiles tutorial homepage" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="main"	value="/WEB-INF/views/teacher/{1}/{2}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	</definition>
	
	<definition name="member.*"	template="/WEB-INF/views/inc/sublayout.jsp">
		<put-attribute name="title"	value="Tiles tutorial homepage" />
		<put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
		<put-attribute name="main"	value="/WEB-INF/views/member/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
	</definition>
	
</tiles-definitions>


